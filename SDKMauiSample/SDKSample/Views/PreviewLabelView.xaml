<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDKSample.Views.PreviewLabelView"
             Title="Preview"
             Background="#cbcbcb">
    <VerticalStackLayout>
        <Label Margin="5"
            Text="A preview of your label"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Margin="5" Source="{Binding ImageSource}" WidthRequest="250" HeightRequest="200"></Image>
    </VerticalStackLayout>
</ContentPage>
